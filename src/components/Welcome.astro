---
import astroLogo from "../assets/astro.svg";
import Github from "./Icons/Github.astro";
import Badge from "./Badge.astro";
import Linkedin from "./Icons/Linkedin.astro";
import SocialPill from "./Icons/SocialPill.astro";
import Mail from "./Icons/mail.astro";
import Experience from "./Experience.astro";
import SectionContainer from "./SectionContainer.astro";
import CodeIcon from "./Icons/CodeIcon.astro";
import ExperienceIcon from "./Icons/ExperienceIcon.astro";
import Prj from "./Projects.astro";
---

<main class="px-2">
  <SectionContainer class="py-44 pb-20">
    <h1
      class="text-white text-2xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-10"
    >
      <img
        src="/src/assets/Foto.jpg"
        class="rounded-full w-15 h-16"
        alt="Aimar photo"
      />
      Hola , Soy Aimar <a
        href="https://www.linkedin.com/in/a-david-nino/"
        target="_blank"
        rel="noopener"
        class="flex justify-center items-center"
      >
        <Badge> Disponible para trabajar</Badge>
      </a>
    </h1>
    <h2 class="text-xl text-wrap">
      Experiencia en proyectos tecnologicos,<span class="text-blue-400/80">
        Conocimientos en el desarrollo web , Conocimientos en ciberseguridad y
        proyectos tecnologicos
      </span>
    </h2>
    <nav class="flex flex-row gap-x-2 mt-4">
      <SocialPill href="https://www.linkedin.com/in/a-david-nino/">
        <Linkedin class="size-6" />
        Linkedin
      </SocialPill>
      <SocialPill href="https://github.com/David-Ramirez01">
        <Github class="size-6" />
        Github
      </SocialPill>
      <SocialPill href="mailto:aimardavidninor@hotmail.com">
        <Mail class="size-6" />
        aimardavidninor@hotmail.com
      </SocialPill>
    </nav>
  </SectionContainer>
  <SectionContainer id="Experiencia">
    <h2 class="text-2xl fond-semibold mb-8 flex gap-x-3 items-center">
      <ExperienceIcon class="size-7" /> Experiencia laboral
    </h2>
    <Experience />
  </SectionContainer>
  <SectionContainer id="Proyectos">
    <h2 class="text-2xl flex gap-x-3 items-center fond-semibold mb-8">
      <CodeIcon class="size-7" /> Proyectos
    </h2>
    <Prj />
  </SectionContainer>
</main>
