---
import ReactIcon from "./Icons/ReactIcon.astro";
import FirebaseIcon from "./Icons/Firebase.astro";
import boostrapIcon from "./Icons/bootstrap.astro";
import TypeScriptIcon from "./Icons/TypeScript.astro";
import LaravelIcon from "./Icons/Laravel.astro";
import GithubIcon from "./Icons/Github.astro";

const TAGS = {
  React: {
    name: "React.JS",
    class: "bg-blue-400 text-white",
    icon: ReactIcon,
  },
  Firebase: {
    name: "Firebase",
    class: "bg-yellow-400 text-black",
    icon: FirebaseIcon,
  },
  boostrap: {
    name: "boostrap",
    class: "bg-purple-400 text-white",
    icon: boostrapIcon,
  },
  typeSript: {
    name: "typeSript",
    class: "bg-blue-400 text-white",
    icon: TypeScriptIcon,
  },
  Laravel: {
    name: "Laravel",
    class: "bg-red-400 text-white",
    icon: LaravelIcon,
  },
};

const Prj = [
  {
    title: "Autenticaci贸n",
    description:
      "Creaci贸n de una web en la que se utilizan herramientas de autenticaci贸n para verificar usuarios",
    link: "#",
    github: "https://github.com/David-Ramirez01/Test-CB",
    image: "/projects/auth.webp",
    tags: [TAGS.React, TAGS.Firebase, TAGS.boostrap, TAGS.typeSript],
  },
  {
    title: "Notes App",
    description:
      "proyecto Web utilizando Laravel(PHP) y JavaScript para la creaci贸n de notas",
    link: "#",
    github: "https://github.com/David-Ramirez01/app_notas",
    image: "https://placehold.co/400x200",
    tags: [TAGS.Laravel, TAGS.typeSript],
  },
];
---

{
  Prj.map(({ title, description, link, github, image, tags }) => (
    <article class="flex flex-col items-center md:flex-row ">
      {image && (
        <img
          class="rounded-xl sm:rounded-xl shadow-2xl shadow-white/10 w-lg h-50"
          src={image}
          alt="Captura de pantalla del proyecto"
        />
      )}
      <div class="flex flex-col justify-between p-4 leading-normal">
        <h2 class="text-2xl font-semibold text-blue-400/80 mb-2">{title}</h2>
        <ul class="flex flex-row gap-x-4 mb-2">
          {tags.map((tag) => (
            <span>
              <li>
                <span
                  class={`flex gap-x-2 text-sm items-center rounded-4xl ${tag.class} py-1 px-2`}
                >
                  <tag.icon class="size-5" />
                  {tag.name}
                </span>
              </li>
            </span>
          ))}
        </ul>
        <p class="mt-2 text-pretty text-gray-700 dark:text-gray-400 py-2">
          {description}
        </p>
        <div class="flex items-end justify-start mt-4 gap-x-4">
          <a
            href={github}
            target="_blank"
            class="text-xl rounded-xl border border-white/10 flex justify-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:bg-white/10 hover:scale-108 transition-transform"
          >
            <GithubIcon class="size-4" /> Code
          </a>
        </div>
      </div>
    </article>
  ))
}
